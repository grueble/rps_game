<%= form_for @game do |form| %>
  <% if @game.errors.present? %>
    <ul>
      <% @game.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form.label :num_rounds %>
  <%= form.text_field :num_rounds %>
  <br>
  <%= form.label :theme %>
  <%= form.text_field :theme %>

  <br>
  <%= form.submit "Create" %>
<% end %>

